{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": ".",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "moduleResolution": "Node",
    "sourceMap": true,
    "target": "es2015",
    "outDir": "wwwroot/tsc"
  },
  "include": [
    "Scripts/**/*",
    "Views/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
